@model VirtualStore.Web.Core.ViewModels.ProductViewModel

<partial name="_ErrorMessage"></partial>

<h2>Delete Product</h2>

<hr>

<div class="container">
    <h4>Do you really want to exclude the product <span class="text-danger">@Model.Name</span> ?</h4>
    <form method="post" class="w-25">
        <input type="hidden" asp-for="@Model.Id">
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-success">No</a>
            <button class="btn btn-danger" type="submit">Yes</button>
        </div>
    </form>
</div>