{
  "AppDetails": {
    "Name": "service-identity"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "SwaggerSettings": {
    "Name": "v1",
    "Title": "API Identity",
    "Version": "1.0",
    "Description": "API to manage processes related to the context of access user e account user.",
    "Contact": {
      "Name": "Develover Team",
      "Email": "dev@virtualstore.com",
      "Url": "https://www.dev.virtualstore.com"
    }
  },

  "APIVersioningSettings": {
    "ApiVersion": {
      "High": 1,
      "Medium": 0
    },
    "Reader": "x-api-version",

    "Explorer": {
      "Format": "'v'VVV"
    }
  },

  "CorsSettings": {
    "CorsPolicy": {
      "Name": "api-identity-policy",
      "AllowedOrigins": [ "*" ],
      "AllowedMethods": [ "GET", "POST", "PUT", "DELETE" ],
      "AllowedHeaders": [ "Authorization", "Content-Type" ]
    }
  },

  "JwtTokenSettings": {
    "Audience": "api-identity",
    "Issuer": "user-client",
    "ExpireHours": 8,
    "RefreshTokenExpireHours": 16
  },

  "InvalidLoginAttempt": {
    "ChangesNumber": 3
  }
}
